<Page x:Class="Bredele_Gestion.AdherentsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Bredele_Gestion"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdherentsPage">

    <Grid Background="#FFEEF5FD">
        <Grid.RowDefinitions>
            <RowDefinition Height="30px"/>
            <RowDefinition Height="25px"/>
            <RowDefinition Height="150px"/>
            <RowDefinition Height="20px"/>
            <RowDefinition Height="25px"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Label Content="Adhérent et Tiers" 
               Grid.Row="0"
               HorizontalAlignment="Center" 
               Margin="0,0,0,0" 
               VerticalAlignment="Top" 
               FontWeight="Bold"/>
        <TextBox HorizontalAlignment="center"
                 Grid.Row="1"
                 TextWrapping="Wrap" 
                 Text="TextBox" 
                 VerticalAlignment="Center" 
                 Width="120"/>
        <ListBox Grid.Row="2"
                 Margin="20,0,20,0"/>
        <Label Content="Actuellement XXXXX adhérents" 
               HorizontalAlignment="Left" 
               Margin="20,0,0,0" 
               Grid.Row="3"
               FontSize="8px"
               VerticalAlignment="Top"/>
        <Button Content="Modifier" 
                HorizontalAlignment="Right" 
                Margin="0,0,20,0" 
                Grid.Row="4" 
                VerticalAlignment="Top"/>

    </Grid>
</Page>
