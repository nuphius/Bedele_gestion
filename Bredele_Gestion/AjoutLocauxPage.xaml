<Page x:Class="Bredele_Gestion.AjoutLocauxPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Bredele_Gestion"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AjoutLocauxPage">

    <!-- Grid pour l'agencement de la page-->
    <Grid Background="#FFEEF5FD" Margin="0,0,0,-174">

        <Grid.RowDefinitions>
            <RowDefinition Height="40px"/>
            <RowDefinition Height="40px"/>
            <RowDefinition Height="40px"/>
            <RowDefinition Height="40px"/>
            <RowDefinition Height="40px"/>
            <RowDefinition Height="40px"/>           
            <RowDefinition Height="40px"/>
            <RowDefinition Height="40px"/>
            <RowDefinition Height="40px"/>
            <RowDefinition Height="40px"/>
            <RowDefinition Height="40px"/>
            <RowDefinition Height="40px"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
       

        <!-- Titre-->
        <Label x:Name="lblTitleAddBox"
                Grid.Row="0"
                Content="Ajouter / Modifier Local"
                FontWeight="Bold"
                FontFamily="Georgia"
                FontSize="20"
                Margin="30,0,30,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                Height="35"/>
        <!-- TextBox - Nom du local-->
        <TextBox x:Name="txtBoxBoxName"
                Grid.Row="1"
                Text="Nom du local"
                TextWrapping="Wrap"
                FontFamily="Georgia"
                FontSize="18"
                Margin="30,0,30,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                Height="30"/>
        <!-- TextBox - Capacité du local-->
        <TextBox x:Name="txtBoxBoxCapacity"
                Grid.Row="2"
                Text="Capacité de la salle"
                TextWrapping="Wrap"
                FontFamily="Georgia"
                FontSize="18"
                Margin="30,0,30,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                Height="30"/>
        <!-- TextBox - Superficie du local-->
        <TextBox x:Name="txtBoxBoxArea"
                Grid.Row="3"
                Text="Superficie du local"
                TextWrapping="Wrap"
                FontFamily="Georgia"
                FontSize="18"
                Margin="30,0,30,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                Height="30"/>
        <!-- Liste déroulente - Tarif-->
        <ComboBox x:Name="cmbBoxPrice"
                Grid.Row="4"
                FontFamily="Georgia"
                Margin="30,10,30,10"
                HorizontalAlignment="Stretch"/>
        
        <!-- TextBox - Adresse deuxième ligne-->
        <TextBox x:Name="txtBoxAddress2"
                Grid.Row="5"
                Text="Adresse2"
                TextWrapping="Wrap"
                FontFamily="Geogia"
                FontSize="18"
                Margin="50,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Height="30"
                Width="253"/>
        <!-- TextBox - Coxde Postal-->
        <TextBox x:Name="txtBoxCP"
                Grid.Row="6"
                Text="CP"
                TextWrapping="Wrap"
                FontFamily="Geogia"
                FontSize="18"
                Margin="50,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Height="30"
                Width="80"/>
        <!-- TextBox - Ville-->
        <TextBox x:Name="txtBoxCity"
                Grid.Row="6"
                Text="Ville"
                TextWrapping="Wrap"
                FontFamily="Geogia"
                FontSize="18"
                Margin="143,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Height="30"
                Width="160"/>
        <!-- TextBox - Date de naissance-->
        <TextBox x:Name="txtBoxBirthDate"
                Grid.Row="7"
                Text="Date de naissance"
                TextWrapping="Wrap"
                FontFamily="Tw Cen MT"
                FontSize="18"
                Margin="50,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Height="30"
                Width="253"/>
        <!-- TextBox - Téléphone-->
        <TextBox x:Name="txtBoxPhone"
                Grid.Row="8"
                Text="Téléphone"
                TextWrapping="Wrap"
                FontFamily="Tw Cen MT"
                FontSize="18"
                Margin="50,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Height="30"
                Width="253"/>
        <!-- TextBox - Email-->
        <TextBox x:Name="txtBoxMail"
                Grid.Row="9"
                Text="Email"
                TextWrapping="Wrap"
                FontFamily="Tw Cen MT"
                FontSize="18"
                Margin="50,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Height="30"
                Width="253"/>
        <!-- CheckBox - Membre de l'association-->
        <CheckBox x:Name="ChkBoxMember"
                Grid.Row="10"
                Content="Adhérent"
                FontFamily="Tw Cen MT"
                FontSize="18"
                Margin="50,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"                  
                Height="20"/>
        <!-- Boutton Supprimer-->
        <Button x:Name="btnDel"
                Grid.Row="11"
                Content="Supprimer"
                FontFamily="Tw Cen MT"
                FontSize="18"
                Margin="50,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Height="30"
                Width="110"/>
        <!-- Bouton Valider-->
        <Button x:Name="btnSub"
                Grid.Row="11"
                Content="Valider"
                FontFamily="Tw Cen MT"
                FontSize="18"
                Margin="193,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Height="30"
                Width="110"/>
        <!-- Label - Message si erreur-->
        <Label x:Name="LblError"
                Grid.Row="12"
                Content="Label"
                Margin="50,5,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Height="280"
                Width="253"
                RenderTransformOrigin="0.82,0.417"
                IsEnabled="False"
                Visibility="Hidden"/>
    </Grid>
</Page>