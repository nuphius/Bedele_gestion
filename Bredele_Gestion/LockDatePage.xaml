<Page x:Class="Bredele_Gestion.LockDatePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Bredele_Gestion"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LockDatePage">

    <Grid Background="#FFEEF5FD">
        <StackPanel 
            HorizontalAlignment="Center"
            Width="250">
            <TextBlock Text="Verrouillage Log" 
                       HorizontalAlignment="Center"
                       FontWeight="Bold"
                       FontSize="18"
                       FontFamily="Georgia"/>
            <Viewbox>
            <Calendar x:Name="calendarLock" 
                      Margin="0,40,0,0" />
            </Viewbox>
            <Button Style="{DynamicResource ButtonStyleCorner3}"
                x:Name="btnCalendar"
                Content="Verrouiller"
                FontFamily="Georgia"
                FontSize="12"
                FontWeight="Bold"
                Margin="0,20,0,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Height="30"
                Width="80" Click="btnCalendar_Click"/>
        </StackPanel>  
    </Grid>
</Page>
