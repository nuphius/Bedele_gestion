<Page x:Class="Bredele_Gestion.ViewBoxPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Bredele_Gestion"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ViewBoxPage">

    <Grid Background="#FFEEF5FD">

        <ListView x:Name="listViewBox" Margin="40">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <WrapPanel>
                        <StackPanel Orientation="Vertical" MinHeight="100" Width="100" Background="#FFE68E8E">
                            <Image Source="/Icon/Bredele_logo.png" />
                            <TextBlock Text="{Binding Name}"/>
                            <TextBlock Text="{Binding Capacity}"/>
                            <TextBlock Text="{Binding Surface}"/>
                        </StackPanel>
                    </WrapPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
